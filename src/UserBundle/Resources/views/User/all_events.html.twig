{% extends "base.html.twig" %}

{% block title %}Évènements{% endblock %}

{% block body %}

    Voici tout les évènements à venir <strong>{% if user.username is not null %}{{ user.username|capitalize }}{% endif %}</strong> !
    {#<a href="logout" style="float: right;">Déconnexion</a>#}
    <br>
    <br>
    <h2 style="text-align: center">Évènements à venir</h2>
    {% if success is defined and success != false %}
        <div id="success-msg">Vous êtes désormais inscrit sur l'évènement !</div>
    {% endif %}
    <table style="border: 1px solid black; border-collapse:collapse; margin: auto; margin-top: 100px;">
        {% for event in events %}
            {% if event.date|date('Y/m/d H:i') >= 'now'|date('Y/m/d H:i') %}
            <thead>
            <tr>
                <th>Activité</th>
                <th>Date</th>
                <th>Place Disponible</th>
                <th>Prix</th>
                <th>Lieu</th>
                <th>Créé par</th>
                <th>Participants</th>
                <th>S'inscrire</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        {{ event.activity.name }}
                        {% if event.additionalInfo is not null %}<br><br>{{ event.additionalInfo }}{% endif %}
                    </td>
                    <td>{{ event.date|date('d/m/Y H:i') }}</td>
                    <td>{{ event.placeAvailable }}</td>
                    <td>{{ event.price }}€</td>
                    <td>
                        {{ event.address }}, {{ event.zip }} {{ event.city }}
                        {% if event.addressComplement is not null %}{{ event.addressComplement }}{% endif %}
                    </td>
                    <td>{{ event.createdBy.username|capitalize }}</td>
                    <td>
                        {% for participant in event.participants %}
                            <br>{{ participant|capitalize }}
                        {% endfor %}
                    </td>
                    <td>
                        {% if event.createdBy != user %}
                            {# SI L'USER N'EST PAS LE CREATEUR DE L'EVENT #}

                            {% for participant in event.participants %}

                                {# SI ID PARTICIPANT = ID USER #}
                                {% if participant.id == user.id %}
                                    <a href=""><input type="submit" value="Se désinscrire"></a>
                                {# SINON SI PLACE DISPO #}
                                {% elseif event.placeAvailable >= 1 %}
                                    S'inscrire
                                    <a href="{{ path('register_new_participant', {'id': event.id}) }}"><input type="submit" value="S'incrire"></a>
                                {% endif %}

                            {% endfor %}

                        {% else %}
                            {# SINON EDITER L'EVENT #}
                            <a href=""><input type="submit" value="Éditer"></a>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
            {% endif %}
        {% endfor %}
    </table>
    <style>
        td, th
        {
            text-align: center;
            border: 1px solid black;
        }
    </style>
{% endblock %}
